doctype html
html(lang="en")
	head
		title= pageTitle
		link(href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb", crossorigin="anonymous")
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js", integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ", crossorigin="anonymous")
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.bundle.min.js", integrity="sha384-3ziFidFTgxJXHMDttyPJKDuTlmxJlwbSkojudK/CkRqKDOmeSbN6KLrGdrBQnT2n", crossorigin="anonymous")
		style
			include style.css
	body
		
		.container
			h1 Nearest #{pageTitle}
			if hasError
				div(class=['alert','alert-danger']) #{error}
			else 								
				each val, index in values				
					h2 #{val.title}
						each event in val.events
							.card
								.card-header #{event.title}
								.card-body
									h6(class=['card-subtitle','mb-2','text-muted']) #{event.address}
									div(class=['card-text', 'small']) !{event.text}
								.card-footer
									small(class='text-muted') #{event.date}
						else
							div(class=['alert','alert-info']) No events

				else
					div(class=['alert','alert-info']) There are no meetups for this week
					

